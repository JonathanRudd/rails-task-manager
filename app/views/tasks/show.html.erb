<h1><%= @task.title %></h1>
<p class="details"><%= @task.details %></p>
<p class="checkbox">completed = <%= @task.completed %></p>

<%= link_to 'Go back to the list', tasks_path, class:"btn btn-primary" %>
<%= link_to 'Edit', edit_path, class:"btn btn-warning" %>
<%= link_to "Delete", task_path(@task), class:"btn btn-danger", method: 'delete', data: { confirm: 'Are you sure?' }%>
